{
  "manifest_version": 2,
  "name": "Page Element Hider",
  "version": "1.0",
  "description": "Hide unwanted elements from webpages for a cleaner browsing experience",
  "homepage_url": "https://github.com/yognevoy/page-element-hider",

  "icons": {
    "48": "icons/ext-icon-48.svg",
    "96": "icons/ext-icon-96.svg"
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/ext-icon-48.svg",
    "default_title": "Beastify",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/page-element-hider.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
